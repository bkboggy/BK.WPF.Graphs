<Window x:Class="BK.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g="clr-namespace:BK.WPF.Graphs.Components;assembly=BK.WPF.Graphs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Demo" 
        d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <g:Graph Margin="10" Data="{Binding Items}"
                 Title="Demo Graph" Subtitle="Sample Data"
                 YAxisTitle="Values" YAxisSubtitle="(Approximate)"
                 XAxisTitle="Categories" XAxisSubtitle="(By Year)">
        </g:Graph>
    </Grid>
</Window>
